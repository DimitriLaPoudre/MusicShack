/* app.css */

/* Définition des variables CSS personnalisées */
:root {
  --color-primary: #6b21a8;
  --color-primary-dark: #5b1198;
  --color-secondary: #f9ae1b;
  --color-secondary-dark: #e99e0b;
  --color-background-light: #2a2a2a;
  --color-background: #1a1a1a;
  --color-background-dark: #0a0a0a;
  --color-error-light: #ff2020;	
  --color-error: #ef1010;	
  --color-error-dark: #df0000;	
  --color-text: #f2f3f4;

  /* Espacements */
  --space-xs: 4px;
  --space-sm: 8px;
  --space-md: 16px;
  --space-lg: 32px;

  /* Typographie */
  --font-heading: "Montserrat", monospace;
  --font-family: "Firacode" monospace;
  --font-size-base: 16px;
  --font-size-lg: 24px;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  font-family: var(--font-family);
  font-size: var(--font-size-base);
  background-color: var(--color-background);
  color: var(--color-text);
  line-height: 1.5;
}

/* Liens */
a {
  color: var(--color-primary);
  text-decoration: none;
}
a:hover {
  color: var(--color-primary);
  text-decoration: none;
}

/* Boutons */
.btn {
  padding: var(--space-sm) var(--space-md);
  border-radius: 8px;
  font-weight: bold;
  cursor: pointer;
}
.btn-primary {
  background-color: var(--color-primary);
  color: white;
}
.btn-secondary {
  background-color: var(--color-secondary);
  color: white;
}

/* Cartes / containers */
.card {
  padding: var(--space-md);
  border-radius: 12px;
  background-color: white;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

/* Marges / espacements */
.mt-md { margin-top: var(--space-md); }
.mb-md { margin-bottom: var(--space-md); }
.p-md { padding: var(--space-md); }

